{
  "name": "clarity-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "fuzz": "npx rv . counter test",
    "fuzz:invariant": "npx rv . counter invariant",
    "fuzz:all": "npm run fuzz && npm run fuzz:invariant"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@stacks/clarinet-sdk": "^3.13.1",
    "@stacks/rendezvous": "latest",
    "@stacks/transactions": "^7.3.1",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^3.0.0"
  }
}
